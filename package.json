{
  "name": "eleventy-site",
  "version": "1.0.0",
  "description": "",
  "main": ".eleventy.config.js",
  "scripts": {
    "dev": "pnpm run clean && run-p dev:*",
    "dev:eleventy": "pnpm exec eleventy --serve",
    "dev:tailwind": "pnpm exec tailwindcss -i ./views/css/tailwind.css -o ./_site/css/tailwind.css --watch",
    
    "build": "pnpm run clean && run-s build:tailwind build:eleventy",
    "build:eleventy": "pnpm exec eleventy",
    "build:tailwind": "pnpm exec tailwindcss -i ./views/css/tailwind.css -o ./_site/css/tailwind.css --minify",
    
    "css": "pnpm exec tailwindcss -i ./views/css/tailwind.css -o ./_site/css/tailwind.css",
    "css:watch": "pnpm exec tailwindcss -i ./views/css/tailwind.css -o ./_site/css/tailwind.css --watch",
    "css:minify": "pnpm exec tailwindcss -i ./views/css/tailwind.css -o ./_site/css/tailwind.css --minify",
    
    "clean": "rm -rf _site",
    "serve": "pnpm exec eleventy --serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-bundle": "^1.0.5",
    "autoprefixer": "^10.4.21",
    "nunjucks": "^3.2.4",
    "postcss": "^8.4.31",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}



